#
# Layout
#
layout:
    - include: header
    - nav_main,         label(4x1), reload, temperature, clock
    - nav_switchboard,  rec_label, rec_appletv, rec_switch, rec_xbox, rec_ps3, rec_off
    - nav_weather,      spacer, spacer, spacer
    - nav_media,        fr_label, fr_appletv, fr_off
    - nav_status   
