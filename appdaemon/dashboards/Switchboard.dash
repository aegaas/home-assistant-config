#     entity: switch.air_conditioner
#     widget_style: "border: 3px solid yellowgreen;"


#
# kitchen
#
label_kitchen:
    widget_type: label
    title2: Kitchen
    widget_style: "border: 3px solid #90918c;"
    title2_style: "font-size:175%;font-weight:400;"

light_kitchen_pendants:
    widget_type: switch
    title: Pendants
    entity: switch.kitchen_pendants
    widget_style: "border: 3px solid #90918c;"

light_kitchen_table:
    widget_type: switch
    title: Table
    entity: switch.kitchen_table
    widget_style: "border: 3px solid #90918c;"

light_kitchen_ceiling:
    widget_type: switch
    title: Ceiling
    entity: switch.kitchen_lights
    widget_style: "border: 3px solid #90918c;"

#
# Family Room
#
label_familyroom:
    widget_type: label
    title2: Family Room
    widget_style: "border: 3px solid #36578c;"
    title2_style: "font-size:175%;font-weight:400;"

light_familyroom:
    widget_type: light
    title: Book Cases
    entity: light.family_room
    widget_style: "border: 3px solid #36578c;"
    state_text_style: "background-color:white;"

light_familyroom_ceiling:
    widget_type: switch
    title: Ceiling
    entity: switch.family_room_overhead
    widget_style: "border: 3px solid #36578c;"
    state_text_style: "background-color:white;"

#
# Night Lights
#
label_nightlights:
    widget_type: label
    title2: Kids' Rooms
    widget_style: "border: 3px solid #36578c;"
    title2_style: "font-size:175%;font-weight:400;"

light_nightlights_zoey:
    widget_type: light
    title: Zoey
    entity: light.zoeys_lamp
    widget_style: "border: 3px solid #36578c;"

light_nightlights_dexter:
    widget_type: light
    title: Dexter
    entity: light.dexter_s_night_light
    widget_style: "border: 3px solid #36578c;"

#
# Basement
# 
label_basement:
    widget_type: label
    title2: Bonus Level
    widget_style: "border: 3px solid #90918c;"
    title2_style: "font-size:175%;font-weight:400;"

light_dojo:
    widget_type: switch
    title: Dojo
    entity: switch.dojo
    widget_style: "border: 3px solid #90918c;"


#
# Outdoor Front
#
label_outdoor:
    widget_type: label
    title2: Outdoors Front
    widget_style: "border: 3px solid #90918c;"
    title2_style: "font-size:175%;font-weight:400;"

light_holiday_front:
    widget_type: switch
    title: Holiday Front
    entity: switch.66580365d8f15b87dc94
    widget_style: "border: 3px solid #90918c;"

light_balcony:
    widget_type: switch
    title: Street Balcony
    entity: switch.balcony
    widget_style: "border: 3px solid #90918c;"


#
# Outdoor Lake
#
label_lake:
    widget_type: label
    title2: Outdoors Lake
    widget_style: "border: 3px solid #36578c;"
    title2_style: "font-size:175%;font-weight:400;"

light_patio:
    widget_type: switch
    title: Lake Patio
    entity: switch.patio
    widget_style: "border: 3px solid #36578c;"

light_holiday_lake:
    widget_type: switch
    title: Holiday Lake
    entity: switch.66580365d8f15b87df37
    widget_style: "border: 3px solid #36578c;"
#
#
# Layout
#
layout:
    - include: header
    - nav_main,         label(4x1), reload, temperature, clock
    - nav_switchboard,  label_office, light_office, spacer, light_kitchen_ceiling, light_kitchen_pendants, light_kitchen_table, label_kitchen
    - nav_weather,      label_bedroom, light_bedroom, spacer, spacer, light_familyroom, light_familyroom_ceiling, label_familyroom
    - nav_media,        label_nightlights, light_nightlights_zoey, light_nightlights_dexter, spacer, light_balcony, light_holiday_front, label_outdoor
    - nav_status,       label_basement, light_dojo, spacer, spacer, light_patio, light_holiday_lake, label_lake
