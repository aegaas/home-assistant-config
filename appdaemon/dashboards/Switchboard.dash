#
# Main arguments, all optional
#
title: Switchboard
widget_dimensions: [121, 122]
widget_size: [1, 1]
widget_margins: [5, 5]
columns: 8
rows: 6
global_parameters:
    use_comma: 0
    precision: 0
    use_hass_icon: 1


#
# Common navigation
#
nav_main:
    widget_type: navigate
    dashboard: Main
    title2: Home
    icon_inactive: mdi-home-assistant
    widget_style: "background: #36578c;"

nav_switchboard:
    widget_type: navigate
    dashboard: Switchboard
    title2: Switchboard
    icon_inactive: mdi-nintendo-switch
    widget_style: "background: #90918c;"

nav_weather:
    widget_type: navigate
    dashboard: Weather
    title2: Weather
    icon_inactive: mdi-weather-partly-cloudy
    widget_style: "background: #36578c;"

nav_media:
    widget_type: navigate
    dashboard: Media
    title2: Media
    icon_inactive: mdi-youtube
    widget_style: "background: #36578c;"

nav_status:
    widget_type: navigate
    dashboard: Status
    title2: Status
    icon_inactive: mdi-information-outline
    widget_style: "background: #36578c;"

nav_spacer:
    widget_type: label
    widget_style: "background: #36578c;"


#
# Header
#
label:
    widget_type: sensor
    title2: Switchboard
    entity: sensor.modes_friendly
    text_style: "font-size: 250%;"
    widget_style: "background: #90918c;"
    title2_style: "text-transform: uppercase; letter-spacing: 0.35em;"


#
# Bedroom
#
label_bedroom:
    widget_type: label
    title2: Master Bedroom
    widget_style: "border: 3px solid #90918c;"
    title2_style: "font-size:175%;font-weight:400;"

light_bedroom:
    widget_type: light
    title: Nightstands
    entity: light.master_bedroom
    widget_style: "border: 3px solid #90918c;"

#
# office
#
label_office:
    widget_type: label
    title2: Aaron's Office
    widget_style: "border: 3px solid #36578c;"
    title2_style: "font-size:175%;font-weight:400;"

light_office:
    widget_type: light
    title: Office
    entity: light.office
    widget_style: "border: 3px solid #36578c;"

# switch_office_airconditioner:
#     widget_type: switch
